    /* --- JUKEBOX POPUP (POPUP FLOTANTE) --- */
    #jukebox-player-bar {
        position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%) scale(0.9);
        width: 95%; max-width: 450px;
