function loadBandHelperWidget() {
    const container = document.getElementById('bandhelper-concerts-container');
    const loadingMessage = document.getElementById('bandhelper-loading-message');
    if (!container) return;
    
    // Crear iframe invisible para sandboxing de document.write
    const iframe = document.createElement('iframe');
    iframe.style.display = 'none';
    document.body.appendChild(iframe);
    
    const doc = iframe.contentWindow.document;
    doc.open();
    doc.write(`
        <head></head>
        <body>
            <script src="https://www.bandhelper.com/widget/calendar/10353?layout=1&range=6"><\/script>
        </body>
    `);
    doc.close();

    // Polling para detectar la tabla dentro del iframe
    let attempts = 0;
    const maxAttempts = 50; // 25 segundos max
    const interval = setInterval(() => {
        attempts++;
        const table = doc.querySelector('table');
        if (table) {
            clearInterval(interval);
            // Mover estilos y tabla al documento principal
            const styles = doc.querySelectorAll('style');
            styles.forEach(s => document.head.appendChild(s.cloneNode(true)));
            
            // Limpiar loader y poner tabla
            container.innerHTML = ""; 
            container.appendChild(table.cloneNode(true));
            
            // Limpieza
            document.body.removeChild(iframe);
            
            console.log("BandHelper cargado exitosamente vía Proxy Iframe.");
            processBandHelperTable(); // Procesar la tabla ahora que existe
            renderVisualCalendar();
        } else if (attempts >= maxAttempts) {
            clearInterval(interval);
            console.error("Timeout cargando BandHelper en iframe.");
            if(loadingMessage) loadingMessage.textContent = "Error: No se pudieron cargar los conciertos externos.";
            // Eliminar iframe aunque falló
            document.body.removeChild(iframe);
        }
    }, 500);
}

// Inicializar la carga del widget
document.addEventListener("DOMContentLoaded", () => {
    // Retrasar ligeramente para priorizar UI crítica
    setTimeout(loadBandHelperWidget, 100);
});

